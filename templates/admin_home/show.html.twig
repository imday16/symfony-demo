{% block title %}
    Home
    
{% endblock %}
{% block body %}
    <div class="d-flex justify-content-between py-3">
        <a href="{{ path('app_admin_home_index') }}" class="btn btn-primary">Retour Ã  la liste</a>
        
        <div class="d-flex">
