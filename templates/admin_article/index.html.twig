{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

<a href="{{ path('app_admin_article_new') }}" class="btn btn-success">Nouveau</a>
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Texte</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.texte }}</td>
                <td class="text-end">
                    <a href="{{ path('app_admin_article_show', {'id': article.id}) }}" class="btn btn-primary"><i class="fa-regular fa-eye"></i></a>
                    <a href="{{ path('app_admin_article_edit', {'id': article.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
